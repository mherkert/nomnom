<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/recipeTextViewSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:paddingStart="@dimen/text_view_horizontal_margin"
        android:paddingEnd="@dimen/text_view_horizontal_margin"
        android:paddingTop="@dimen/text_view_horizontal_margin"
        android:paddingBottom="@dimen/text_view_horizontal_margin"
        android:contentDescription="@string/item_recipe_tv_desc">
    </TextView>

</LinearLayout>