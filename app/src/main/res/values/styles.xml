<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_green</item>
        <item name="android:colorBackground">@color/background_green</item>
        <item name="android:actionBarStyle">@style/NomNomActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/NomNomActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="NomNomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background_green</item>

        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background_green</item>
    </style>
</resources>
